<!DOCTYPE html><$mt:Include module="config"$>
<html lang="ja" itemscope itemtype="http://schema.org/WebPage">
<head>
<meta charset="<$mt:PublishCharset$>">
<title><$mt:EntryTitle encode_html="1"$> | <$mt:BlogName encode_html="1"$></title>
<meta name="description" content="">
<meta name="keywords" content="<$mt:GetVar name="metakeywords"$>,<$mt:EntryKeywords$>">
<meta name="viewport" content="width=device-width,initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<link rel="shortcut icon" href="<$mt:BlogURL encode_html="1"$>images/favicon.ico">
<link rel="start" href="<$mt:BlogURL encode_html="1"$>">
<link rel="alternate" type="application/atom+xml" title="Recent Entries" href="<$mt:Link template="feed_recent"$>">
<$mt:CanonicalLink$>
<!-- Open Graph Protocol -->
<meta property="og:type" content="article">
<meta property="og:locale" content="<$mt:BlogLanguage setvar="blog_lang"$><mt:If name="blog_lang" eq="ja">ja_JP<mt:Else><$mt:Var name="blog_lang"$></mt:If>">
<meta property="og:title" content="<$mt:EntryTitle encode_html="1"$> | <$mt:BlogName encode_html="1"$>">
<meta property="og:url" content="<$mt:EntryPermalink encode_html="1"$>">
<meta property="og:description" content="">
<meta property="og:site_name" content="<$mt:BlogName encode_html="1"$>">
<meta property="og:image" content="<mt:EntryAssets type="image" sort_order="ascend" limit="1"><$mt:AssetThumbnailURL width="1200"$><mt:Else><$mt:BlogURL encode_html="1"$>images/ogimage.png</mt:EntryAssets>">
<!-- Microdata -->
<meta itemprop="description" content="">
<link itemprop="url" href="<$mt:EntryPermalink encode_html="1"$>">
<link itemprop="image" href="<mt:EntryAssets type="image" sort_order="ascend" limit="1"><$mt:AssetThumbnailURL width="1200"$><mt:Else><$mt:BlogURL encode_html="1"$>images/ogimage.png</mt:EntryAssets>">
<link rel="stylesheet" href="<$mt:BlogRelativeURL$>css/reset.css">
<link rel="stylesheet" href="<$mt:BlogRelativeURL$>style.css">
<link rel="stylesheet" href="<$mt:BlogRelativeURL$>css/jquery.bxslider.css">
<!--[if lt IE 9]>
<script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
<script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
<![endif]--> 
</head>

<body>

<$mt:Include module="header"$>

<div id="content" class="group">
  <main role="main">
    <section class="entry-detail">
      <article>
        <div class="entry-meta group">
          <time><$mt:EntryDate format="%Y.%m.%d"$></time>
          <ul class="categories">
            <mt:EntryCategories>
              <li><a href="<$mt:CategoryArchiveLink$>"><$mt:CategoryLabel$></a></li>
            </mt:EntryCategories>
          </ul>
        </div>
        <h1 class="entry-title"><$mt:EntryTitle encode_html="1"$></h1>
        <section class="entry-body">
          <$mt:EntryBody$>
          <$mt:EntryMore$>
        </section>
      </article>
  </section>
  <section class="entry-author">
    <h1>この記事の筆者</h1>
    <div class="inner group">
      <div class="entry-authorphoto">
        <a href="<$mt:ArchiveLink archive_type='Author'$>">
       <mt:If tag="AuthorUserpic">
          <img alt="<$mt:EntryAuthorDisplayName$>" src="<$mt:AuthorUserpicURL$>" width="120">
         <mt:Else>
         <img alt="<$mt:EntryAuthorDisplayName$>" src="<$mt:BlogRelativeURL$>images/noimage-pic.png">
      </mt:If>
        </a>
        <p class="entry-authorname"><a href="<$mt:ArchiveLink archive_type='Author'$>"><$mt:EntryAuthorDisplayName$> </a></p>
      </div>
      <div class="entry-authorrecentpost">
        <ul>
        <mt:SetVarBlock name="writer"><$mt:AuthorName$></mt:SetVarBlock>
        <mt:SetVarBlock name="this_id"><$mt:EntryID$></mt:SetVarBlock>
        <mt:Entries id="$this_id"></mt:Entries>
        <mt:Entries lastn="5" author="$writer" unique="1">
          <li><a href="<$mt:EntryPermalink$>"><$mt:EntryTitle encode_html="1"$></a></li>
        </mt:Entries>
        </ul>
      </div>
    </div>
  </section>
  <$mt:Include module="zenback"$>
  </main>
  <aside>
<$mt:Include module="links"$>
<$mt:Include module="banners"$>
<$mt:Include module="facebook"$>
<$mt:Include module="twitter"$>
  </aside>
</div><!-- #content -->

<$mt:Include module="footer"$>

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  
</body>
</html>
